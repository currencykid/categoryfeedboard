%html
%head
  %title 
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
  = javascript_include_tag 'application', 'data-turbolinks-track' => true 
  = csrf_meta_tags 

%body
  %nav.navbar.navbar-default
    .container
      = link_to "PostBoard", root_path, class: "navbar-brand" 
      %ul.nav.navbar-nav
        %li= link_to "All" , root_path 
        - Category.all.each do |category|
          %li=link_to category.name, posts_path(category: category.name)  
      = link_to "Create Post", new_post_path, class: "navbar-text navbar-right navbar-link btn btn-md btn-default"  
  .container
    .col-md-6.col-md-offset-3
      = yield 


